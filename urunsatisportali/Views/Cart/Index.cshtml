@model urunsatisportali.Models.ViewModels.CartViewModel
@{
    ViewData["Title"] = "Alışveriş Sepeti";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Alışveriş Sepeti</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Ana Sayfa</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Shop")">Mağaza</a></li>
                    <li class="breadcrumb-item active">Sepet</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row mb-3">
    <div class="col-xl-8">
        <div class="row align-items-center gy-3 mb-3">
            <div class="col-sm">
                <div>
                    <h5 class="fs-14 mb-0">Sepetiniz (@Model.Items.Sum(x => x.Quantity) ürün)</h5>
                </div>
            </div>
            <div class="col-sm-auto">
                <a href="@Url.Action("Index", "Shop")" class="link-primary text-decoration-underline">Alışverişe
                    Devam Et</a>
            </div>
        </div>

        @if (Model.Items.Any())
        {
            @foreach (var item in Model.Items)
            {
                <div class="card product">
                    <div class="card-body">
                        <div class="row gy-3">
                            <div class="col-sm-auto">
                                <div class="avatar-lg bg-light rounded p-1">
                                    <img src="@Url.Content(item.ImageUrl)" alt="" class="img-fluid d-block">
                                </div>
                            </div>
                            <div class="col-sm">
                                <h5 class="fs-14 text-truncate"><a
                                        href="@Url.Action("Details", "Shop", new { id = item.ProductId })"
                                        class="text-body">@item.ProductName</a></h5>
                                <ul class="list-inline text-muted">
                                    <li class="list-inline-item">Fiyat : <span
                                            class="fw-medium">@item.Price.ToString("C2")</span></li>
                                </ul>

                                <div class="input-step light">
                                    <form asp-action="UpdateQuantity" method="post" class="d-inline-flex">
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <button type="button" class="minus">–</button>
                                        <input type="number" class="product-quantity" name="quantity" value="@item.Quantity"
                                            min="1" max="100" readonly>
                                        <button type="button" class="plus">+</button>
                                    </form>
                                </div>
                            </div>
                            <div class="col-sm-auto">
                                <div class="text-lg-end">
                                    <p class="text-muted mb-1">Ürün Toplamı:</p>
                                    <h5 class="fs-14">@item.Total.ToString("C2")</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- card footer -->
                    <div class="card-footer">
                        <div class="row align-items-center gy-3">
                            <div class="col-sm">
                                <div class="d-flex flex-wrap my-n1">
                                    <div>
                                        <a href="@Url.Action("RemoveFromCart", new { productId = item.ProductId })"
                                            class="d-block text-body p-1 px-2" data-bs-toggle="tooltip" data-bs-placement="top"
                                            title="Kaldır">
                                            <i class="ri-delete-bin-fill text-muted align-bottom me-1"></i> Kaldır
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-auto">
                                <div class="d-flex align-items-center gap-2 text-muted">
                                    <div>Toplam :</div>
                                    <h5 class="fs-14 mb-0"><span class="product-line-price">@item.Total.ToString("C2")</span>
                                    </h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end card footer -->
                </div>
            }
        }
        else
        {
            <div class="text-center py-5">
                <div class="avatar-lg mx-auto mb-4">
                    <div class="avatar-title bg-primary-subtle text-primary rounded-circle fs-50">
                        <i class="ri-shopping-cart-2-fill"></i>
                    </div>
                </div>
                <h5 class="fs-16 mb-3">Sepetiniz Boş!</h5>
                <a href="@Url.Action("Index", "Shop")" class="btn btn-primary w-md">Alışverişe Başla</a>
            </div>
        }
    </div>
    <!-- end col -->

    <div class="col-xl-4">
        <div class="sticky-side-div">
            <div class="card">
                <div class="card-header border-bottom-dashed">
                    <h5 class="card-title mb-0">Sipariş Özeti</h5>
                </div>
                <div class="card-body pt-2">
                    <div class="table-responsive">
                        <table class="table table-borderless mb-0">
                            <tbody>
                                <tr>
                                    <td>Ara Toplam :</td>
                                    <td class="text-end">@Model.GrandTotal.ToString("C2")</td>
                                </tr>
                                <tr>
                                    <td>Kargo Ücreti :</td>
                                    <td class="text-end">₺0.00</td>
                                </tr>
                                <tr class="table-active">
                                    <th>Toplam (TL) :</th>
                                    <td class="text-end">
                                        <span class="fw-semibold">
                                            @Model.GrandTotal.ToString("C2")
                                        </span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                @if (Model.Items.Any())
                {
                    <a href="@Url.Action("Index", "Checkout")" class="btn btn-success w-100">Ödeme Sayfasına Git</a>
                }
                else
                {
                    <button class="btn btn-success w-100" disabled>Ödeme Sayfasına Git</button>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script nonce="@Context.Items["CSPNonce"]">
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.minus').forEach(function (btn) {
                btn.addEventListener('click', function () {
                    var input = this.parentNode.querySelector('input[type=number]');
                    input.stepDown();
                    this.parentNode.submit();
                });
            });

            document.querySelectorAll('.plus').forEach(function (btn) {
                btn.addEventListener('click', function () {
                    var input = this.parentNode.querySelector('input[type=number]');
                    input.stepUp();
                    this.parentNode.submit();
                });
            });
        });
    </script>
}
