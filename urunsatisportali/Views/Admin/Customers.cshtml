@model IEnumerable<urunsatisportali.Models.Customer>
@{
    ViewData["Title"] = "Müşteriler";
    Layout = "_AdminLayout";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <h2><i class="bi bi-people"></i> Müşteriler</h2>
    <a asp-action="CreateCustomer" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni Müşteri Ekle
    </a>
</div>

<div class="card">
    <div class="card-header">
        <form method="get" class="row g-3">
            <div class="col-md-10">
                <input type="text" name="searchString" class="form-control" placeholder="Müşteri adı, e-posta veya telefon ara..." value="@ViewContext.HttpContext.Request.Query["searchString"]" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Ara</button>
            </div>
        </form>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Ad</th>
                        <th>E-posta</th>
                        <th>Telefon</th>
                        <th>Şehir</th>
                        <th>Oluşturulma</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model)
                    {
                        <tr>
                            <td>@customer.Id</td>
                            <td><strong>@customer.Name</strong></td>
                            <td>@(customer.Email ?? "N/A")</td>
                            <td>@(customer.Phone ?? "N/A")</td>
                            <td>@(customer.City ?? "N/A")</td>
                            <td>@customer.CreatedAt.ToString("dd.MM.yyyy")</td>
                            <td>
                                <a asp-action="EditCustomer" asp-route-id="@customer.Id" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil-square"></i> Düzenle
                                </a>
                                <form asp-action="DeleteCustomer" method="post" class="d-inline ms-2" onsubmit="return confirm('Bu müşteriyi silmek istediğinizden emin misiniz?');">
                                    <input type="hidden" name="id" value="@customer.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash3"></i> Sil
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

