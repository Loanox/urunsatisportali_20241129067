@using urunsatisportali.Helpers
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}

<div class="page-header">
    <h2><i class="bi bi-speedometer2"></i> Dashboard</h2>
</div>

<div class="row">
    <div class="col-md-3">
        <div class="stat-card" style="background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);">
            <h3>@ViewBag.TotalProducts</h3>
            <p><i class="bi bi-box-seam"></i> Toplam Ürün</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
            <h3>@ViewBag.TotalCustomers</h3>
            <p><i class="bi bi-people"></i> Toplam Müşteri</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
            <h3>@ViewBag.TotalSales</h3>
            <p><i class="bi bi-cart-check"></i> Toplam Satış</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card" style="background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);">
            <h3>@CurrencyHelper.FormatTurkishLira((decimal)ViewBag.TotalRevenue)</h3>
            <p><i class="bi bi-currency-dollar"></i> Toplam Gelir</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Düşük Stoklu Ürünler</h5>
            </div>
            <div class="card-body">
                <h2 class="text-warning">@ViewBag.LowStockProducts</h2>
                <p class="text-muted">Stok miktarı 10'un altında olan ürünler</p>
                <a asp-action="Products" class="btn btn-sm btn-outline-primary">Ürünleri Görüntüle</a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-clock-history"></i> Son Satışlar</h5>
            </div>
            <div class="card-body">
                @if (ViewBag.RecentSales != null && ((List<urunsatisportali.Models.Sale>)ViewBag.RecentSales).Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Satış #</th>
                                    <th>Müşteri</th>
                                    <th>Tutar</th>
                                    <th>Tarih</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var sale in (List<urunsatisportali.Models.Sale>)ViewBag.RecentSales)
                                {
                                    <tr>
                                        <td>@sale.SaleNumber</td>
                                        <td>@sale.Customer.Name</td>
                                        <td>@CurrencyHelper.FormatTurkishLira(sale.FinalAmount)</td>
                                        <td>@sale.SaleDate.ToString("dd/MM/yyyy")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">Son satış bulunmuyor</p>
                }
                <a asp-action="Sales" class="btn btn-sm btn-outline-primary mt-2">Tüm Satışları Görüntüle</a>
            </div>
        </div>
    </div>
</div>

