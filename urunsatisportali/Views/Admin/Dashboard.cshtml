@using urunsatisportali.Helpers
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Dashboard</h2>
    <span class="text-muted">Genel bakış ve hızlı istatistikler</span>
</div>

<div class="row g-3 mb-3">
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted">Toplam Ürün</div>
                        <div class="fs-4 fw-semibold">@ViewBag.TotalProducts</div>
                    </div>
                    <div class="text-primary"><i class="bi bi-box" style="font-size: 1.75rem;"></i></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted">Toplam Müşteri</div>
                        <div class="fs-4 fw-semibold">@ViewBag.TotalCustomers</div>
                    </div>
                    <div class="text-success"><i class="bi bi-people" style="font-size: 1.75rem;"></i></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted">Toplam Satış</div>
                        <div class="fs-4 fw-semibold">@ViewBag.TotalSales</div>
                    </div>
                    <div class="text-warning"><i class="bi bi-cart-check" style="font-size: 1.75rem;"></i></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted">Toplam Gelir</div>
                        <div class="fs-4 fw-semibold">@(((decimal)ViewBag.TotalRevenue).ToString("C"))</div>
                    </div>
                    <div class="text-danger"><i class="bi bi-currency-dollar" style="font-size: 1.75rem;"></i></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-3">
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>Düşük Stok</span>
                <span class="badge bg-warning text-dark">@ViewBag.LowStockProducts</span>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Ürün</th>
                                <th>Stok</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in (IEnumerable<urunsatisportali.Models.Product>)ViewBag.LowStockList ?? Enumerable.Empty<urunsatisportali.Models.Product>())
                            {
                                <tr>
                                    <td>@product.Name</td>
                                    <td><span class="badge bg-warning text-dark">@product.StockQuantity</span></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header">Son Satışlar</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Müşteri</th>
                                <th>Tutar</th>
                                <th>Tarih</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var s in (IEnumerable<urunsatisportali.Models.Sale>)ViewBag.RecentSales)
                            {
                                <tr>
                                    <td>@s.SaleNumber</td>
                                    <td>@s.Customer?.Name</td>
                                    <td>@s.FinalAmount.ToString("C")</td>
                                    <td>@s.SaleDate.ToString("dd.MM.yyyy HH:mm")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
}

