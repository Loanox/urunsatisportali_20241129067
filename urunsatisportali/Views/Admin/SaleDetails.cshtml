@model urunsatisportali.Models.Sale
@{
    ViewData["Title"] = "Sale Details";
    Layout = "_AdminLayout";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <h2><i class="bi bi-info-circle"></i> Sale Details</h2>
    <a asp-action="Sales" class="btn btn-secondary">Back to Sales</a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-3">
            <div class="card-header">
                <h5 class="mb-0">Sale Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Sale Number:</dt>
                    <dd class="col-sm-8"><strong>@Model.SaleNumber</strong></dd>

                    <dt class="col-sm-4">Customer:</dt>
                    <dd class="col-sm-8">@Model.Customer.Name</dd>

                    <dt class="col-sm-4">Customer Email:</dt>
                    <dd class="col-sm-8">@(Model.Customer.Email ?? "N/A")</dd>

                    <dt class="col-sm-4">Customer Phone:</dt>
                    <dd class="col-sm-8">@(Model.Customer.Phone ?? "N/A")</dd>

                    <dt class="col-sm-4">Sale Date:</dt>
                    <dd class="col-sm-8">@Model.SaleDate.ToString("MM/dd/yyyy HH:mm")</dd>

                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8">
                        @if (Model.Status == "Completed")
                        {
                            <span class="badge bg-success">@Model.Status</span>
                        }
                        else if (Model.Status == "Pending")
                        {
                            <span class="badge bg-warning">@Model.Status</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">@Model.Status</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Notes:</dt>
                    <dd class="col-sm-8">@(Model.Notes ?? "N/A")</dd>
                </dl>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Sale Items</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Unit Price</th>
                                <th>Discount</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.SaleItems)
                            {
                                <tr>
                                    <td>@item.Product.Name</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.UnitPrice.ToString("C")</td>
                                    <td>@item.Discount.ToString("C")</td>
                                    <td><strong>@item.TotalPrice.ToString("C")</strong></td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th colspan="4" class="text-end">Subtotal:</th>
                                <th>@Model.TotalAmount.ToString("C")</th>
                            </tr>
                            <tr>
                                <th colspan="4" class="text-end">Discount:</th>
                                <th>@Model.Discount.ToString("C")</th>
                            </tr>
                            <tr>
                                <th colspan="4" class="text-end">Tax:</th>
                                <th>@Model.Tax.ToString("C")</th>
                            </tr>
                            <tr class="table-primary">
                                <th colspan="4" class="text-end">Final Amount:</th>
                                <th>@Model.FinalAmount.ToString("C")</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

