@model IEnumerable<urunsatisportali.Models.Sale>
@{
    ViewData["Title"] = "Satýþlar";
    Layout = "_AdminLayout";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <h2><i class="bi bi-cart-check"></i> Satýþlar</h2>
    <a asp-action="CreateSale" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni
    </a>
</div>

<div class="card">
    <div class="card-header">
        <form method="get" class="row g-3">
            <div class="col-md-5">
                <input type="text" name="searchString" class="form-control" placeholder="Satýþ numarasý veya müþteri ara..." value="@ViewContext.HttpContext.Request.Query["searchString"]" />
            </div>
            <div class="col-md-3">
                <select name="status" class="form-select">
                    <option value="">Tüm Durumlar</option>
                    <option value="Pending" selected="@(ViewContext.HttpContext.Request.Query["status"].ToString() == "Pending")">Beklemede</option>
                    <option value="Completed" selected="@(ViewContext.HttpContext.Request.Query["status"].ToString() == "Completed")">Tamamlandý</option>
                    <option value="Cancelled" selected="@(ViewContext.HttpContext.Request.Query["status"].ToString() == "Cancelled")">Ýptal</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100"><i class="bi bi-search"></i> Ara</button>
            </div>
            <div class="col-md-2">
                <a asp-action="Sales" class="btn btn-outline-secondary w-100"><i class="bi bi-x-circle"></i> Temizle</a>
            </div>
        </form>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Satýþ #</th>
                        <th>Müþteri</th>
                        <th>Toplam</th>
                        <th>Ýndirim</th>
                        <th>Net</th>
                        <th>Durum</th>
                        <th>Tarih</th>
                        <th class="text-end">Ýþlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sale in Model)
                    {
                        <tr>
                            <td><strong>@sale.SaleNumber</strong></td>
                            <td>@(sale.Customer != null ? sale.Customer.Name : "-")</td>
                            <td>@sale.TotalAmount.ToString("C")</td>
                            <td>@sale.Discount.ToString("C")</td>
                            <td><strong>@sale.FinalAmount.ToString("C")</strong></td>
                            <td>
                                @if (sale.Status == "Completed")
                                {
                                    <span class="badge bg-success">Tamamlandý</span>
                                }
                                else if (sale.Status == "Pending")
                                {
                                    <span class="badge bg-warning text-dark">Beklemede</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Ýptal</span>
                                }
                            </td>
                            <td>@sale.SaleDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    <a asp-action="SaleDetails" asp-route-id="@sale.Id" class="btn btn-sm btn-outline-info" title="Detay">
                                        <i class="bi bi-eye"></i> Detay
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

