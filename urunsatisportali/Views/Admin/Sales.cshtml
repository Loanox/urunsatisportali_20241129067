@model IEnumerable<urunsatisportali.Models.Sale>
@{
    ViewData["Title"] = "Sales";
    Layout = "_AdminLayout";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <h2><i class="bi bi-cart-check"></i> Sales</h2>
    <a asp-action="CreateSale" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Create New Sale
    </a>
</div>

<div class="card">
    <div class="card-header">
        <form method="get" class="row g-3">
            <div class="col-md-5">
                <input type="text" name="searchString" class="form-control" placeholder="Search by sale number or customer..." value="@ViewContext.HttpContext.Request.Query["searchString"]" />
            </div>
            <div class="col-md-3">
                <select name="status" class="form-select">
                    <option value="">All Statuses</option>
                    <option value="Pending" selected="@(ViewContext.HttpContext.Request.Query["status"].ToString() == "Pending")">Pending</option>
                    <option value="Completed" selected="@(ViewContext.HttpContext.Request.Query["status"].ToString() == "Completed")">Completed</option>
                    <option value="Cancelled" selected="@(ViewContext.HttpContext.Request.Query["status"].ToString() == "Cancelled")">Cancelled</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Search</button>
            </div>
            <div class="col-md-2">
                <a asp-action="Sales" class="btn btn-outline-secondary w-100">Clear</a>
            </div>
        </form>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Sale #</th>
                        <th>Customer</th>
                        <th>Total Amount</th>
                        <th>Discount</th>
                        <th>Final Amount</th>
                        <th>Status</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sale in Model)
                    {
                        <tr>
                            <td><strong>@sale.SaleNumber</strong></td>
                            <td>@sale.Customer.Name</td>
                            <td>@sale.TotalAmount.ToString("C")</td>
                            <td>@sale.Discount.ToString("C")</td>
                            <td><strong>@sale.FinalAmount.ToString("C")</strong></td>
                            <td>
                                @if (sale.Status == "Completed")
                                {
                                    <span class="badge bg-success">@sale.Status</span>
                                }
                                else if (sale.Status == "Pending")
                                {
                                    <span class="badge bg-warning">@sale.Status</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">@sale.Status</span>
                                }
                            </td>
                            <td>@sale.SaleDate.ToString("MM/dd/yyyy HH:mm")</td>
                            <td>
                                <a asp-action="SaleDetails" asp-route-id="@sale.Id" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

