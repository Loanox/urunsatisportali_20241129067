@using urunsatisportali.Helpers
@model IEnumerable<urunsatisportali.Models.Product>
@{
    ViewData["Title"] = "Ürünler";
    Layout = "_AdminLayout";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <h2><i class="bi bi-box"></i> Ürünler</h2>
    <a asp-action="CreateProduct" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Ad</th>
                        <th>Fiyat</th>
                        <th>Stok</th>
                        <th>Kategori</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td>@p.Name</td>
                            <td>@CurrencyHelper.FormatTurkishLira(p.Price)</td>
                            <td>
                                <span class="badge @(p.StockQuantity < 10 ? "bg-warning" : "bg-success")">
                                    @p.StockQuantity @p.Unit
                                </span>
                            </td>
                            <td>@(p.Category?.Name ?? "Kategori yok")</td>
                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    <a asp-action="ProductDetails" asp-route-id="@p.Id" class="btn btn-sm btn-outline-info" title="Detay">
                                        <i class="bi bi-eye"></i> Detay
                                    </a>
                                    <a asp-action="EditProduct" asp-route-id="@p.Id" class="btn btn-sm btn-warning ms-2" title="Düzenle">
                                        <i class="bi bi-pencil-square"></i> Düzenle
                                    </a>
                                    <form asp-action="DeleteProduct" asp-route-id="@p.Id" method="post" class="d-inline ms-2">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger" title="Sil" onclick="return confirm('Ürünü silmek istediğinize emin misiniz?');">
                                            <i class="bi bi-trash3"></i> Sil
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

