@using urunsatisportali.Helpers
@model IEnumerable<urunsatisportali.Models.Product>
@{
    ViewData["Title"] = "Ürünler";
    Layout = "_AdminLayout";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <h2><i class="bi bi-box-seam"></i> Ürünler</h2>
    <a asp-action="CreateProduct" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni Ürün Ekle
    </a>
</div>

<div class="card">
    <div class="card-header">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <input type="text" name="searchString" class="form-control" placeholder="Ürün ara..." value="@ViewContext.HttpContext.Request.Query["searchString"]" />
            </div>
            <div class="col-md-3">
                <select name="categoryId" class="form-select">
                    <option value="">Tüm Kategoriler</option>
                    @foreach (var category in (List<urunsatisportali.Models.Category>)ViewBag.Categories)
                    {
                        <option value="@category.Id" selected="@(ViewContext.HttpContext.Request.Query["categoryId"].ToString() == category.Id.ToString())">
                            @category.Name
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Ara</button>
            </div>
            <div class="col-md-2">
                <a asp-action="Products" class="btn btn-outline-secondary w-100">Temizle</a>
            </div>
        </form>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Ad</th>
                        <th>SKU</th>
                        <th>Kategori</th>
                        <th>Fiyat</th>
                        <th>Stok</th>
                        <th>Marka</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Id</td>
                            <td>@product.Name</td>
                            <td>@product.SKU</td>
                            <td>@(product.Category?.Name ?? "Kategori yok")</td>
                            <td>@CurrencyHelper.FormatTurkishLira(product.Price)</td>
                            <td>
                                <span class="badge @(product.StockQuantity < 10 ? "bg-warning" : "bg-success")">
                                    @product.StockQuantity @product.Unit
                                </span>
                            </td>
                            <td>@product.Brand</td>
                            <td>
                                @if (product.IsActive)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pasif</span>
                                }
                            </td>
                            <td>
                                <a asp-action="ProductDetails" asp-route-id="@product.Id" class="btn btn-sm btn-info" title="Detaylar">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="EditProduct" asp-route-id="@product.Id" class="btn btn-sm btn-warning" title="Düzenle">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form asp-action="DeleteProduct" method="post" class="d-inline" onsubmit="return confirm('Bu ürünü silmek istediğinizden emin misiniz?');">
                                    <input type="hidden" name="id" value="@product.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger" title="Sil">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

