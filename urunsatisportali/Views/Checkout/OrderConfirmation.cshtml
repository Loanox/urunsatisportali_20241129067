@model urunsatisportali.Models.Sale
@{
    ViewData["Title"] = "Order Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <div class="text-center py-5">
                    <div class="mb-4">
                        <lord-icon src="https://cdn.lordicon.com/lupuorrc.json" trigger="loop"
                            colors="primary:#0ab39c,secondary:#405189"
                            style="width:120px;height:120px"></lord-icon>
                    </div>
                    <h5>Thank you ! Your Order is Completed !</h5>
                    <p class="text-muted">We have received your order.</p>
                    <h3 class="fw-semibold">Order No: <span class="text-primary">@Model.SaleNumber</span></h3>
                    
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Shop")" class="btn btn-success">Continue Shopping</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.lordicon.com/lusqsztk.js"></script>
}
