@model IEnumerable<urunsatisportali.Models.Sale>
@using urunsatisportali.Helpers
@{
    ViewData["Title"] = "Satışlar";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Siparişler</h4>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Tüm Sipariş Listesi</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="sales-table" class="table table-bordered dt-responsive nowrap table-striped align-middle"
                        style="width:100%">
                        <thead>
                            <tr>
                                <th>Sipariş No</th>
                                <th>Müşteri</th>
                                <th>Tarih</th>
                                <th>Tutar</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.SaleNumber</td>
                                    <td>
                                        @if (item.User != null)
                                        {
                                            <span>@item.User.FullName (@item.User.UserName)</span>
                                        }
                                        else if (item.Customer != null)
                                        {
                                            <span>@item.Customer.Name</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Misafir / Bilinmiyor</span>
                                        }
                                    </td>
                                    <td>@item.SaleDate.ToString("g")</td>
                                    <td>@item.FinalAmount.ToString("C2")</td>
                                    <td>
                                        @if (item.Status == "Completed")
                                        {
                                            <span class="badge bg-success">Tamamlandı</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@item.Status</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details", "Sales", new { id = item.Id })"
                                            class="btn btn-sm btn-info text-white" title="Detay">
                                            <i class="bi bi-eye"></i> Detay
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
