@model IEnumerable<urunsatisportali.Models.Category>
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "_AdminLayout";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <h2><i class="bi bi-tags"></i> Kategoriler</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni Kategori Ekle
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Ad</th>
                        <th>Açıklama</th>
                        <th>Oluşturulma</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                            <tr>
                                <td>@category.Id</td>
                                <td><strong>@category.Name</strong></td>
                                <td>@(category.Description ?? "N/A")</td>
                                <td>@category.CreatedAt.ToString("dd.MM.yyyy")</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil-square"></i> Düzenle
                                    </a>
                                    <form asp-action="Delete" method="post" class="d-inline ms-2" onsubmit="return confirm('Bu kategoriyi silmek istediğinizden emin misiniz?');">
                                        <input type="hidden" name="id" value="@category.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash3"></i> Sil
                                        </button>
                                    </form>
                                </td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
