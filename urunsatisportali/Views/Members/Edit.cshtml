@model urunsatisportali.Models.ApplicationUser
@{
    ViewData["Title"] = "Üye Düzenle";
    Layout = "_AdminLayout";
    var userRoles = ViewBag.UserRoles as IList<string>;
    var allRoles = ViewBag.AllRoles as IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>;
}

<div class="page-header mb-4">
    <h2><i class="bi bi-pencil-square"></i> Üye Düzenle: @Model.UserName</h2>
    <a asp-action="Index" class="btn btn-secondary mt-2"><i class="bi bi-arrow-left"></i> Listeye Dön</a>
</div>

@if (TempData["SuccessMessage"] != null)
{
        <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
}

@if (TempData["ErrorMessage"] != null)
{
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
}

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">Kullanıcı Bilgileri</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label">Ad Soyad</label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" type="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label">Telefon</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="IsAdmin" class="form-check-input" type="checkbox" />
                        <label asp-for="IsAdmin" class="form-check-label">Admin mi?</label>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-warning">
                    <h5 class="card-title mb-0">Şifre Değiştir (Opsiyonel)</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="newPassword" class="form-label">Yeni Şifre</label>
                        <input type="password" name="newPassword" id="newPassword" class="form-control" 
                               placeholder="Şifre değiştirmek istemiyorsanız boş bırakın" />
                        <small class="form-text text-muted">Minimum 6 karakter, en az 1 küçük harf içermelidir.</small>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">Roller</h5>
                </div>
                <div class="card-body">
                    @if (allRoles != null && allRoles.Any())
                    {
                        @foreach (var role in allRoles)
                        {
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="selectedRoles" 
                                               value="@role.Name" id="role_@role.Id"
                                @(userRoles != null && userRoles.Contains(role.Name) ? "checked" : "") />
                                        <label class="form-check-label" for="role_@role.Id">
                                    @role.Name
                                        </label>
                                    </div>
                        }
                    }
                </div>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Kaydet</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-x-circle"></i> İptal</a>
            </div>
        </form>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-secondary text-white">
                <h5 class="card-title mb-0">Ek Bilgiler</h5>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <strong>ID:</strong> @Model.Id
                    </li>
                    <li class="list-group-item">
                        <strong>Kayıt Tarihi:</strong> @Model.CreatedAt.ToString("g")
                    </li>
                    <li class="list-group-item">
                        <strong>Son Giriş:</strong> @(Model.LastLoginAt?.ToString("g") ?? "Bilinmiyor")
                    </li>
                    <li class="list-group-item">
                        <strong>Email Onayı:</strong> @(Model.EmailConfirmed ? "Onaylı" : "Onaysız")
                    </li>
                    <li class="list-group-item">
                        <strong>Telefon Onayı:</strong> @(Model.PhoneNumberConfirmed ? "Onaylı" : "Onaysız")
                    </li>
                    <li class="list-group-item">
                        <strong>İki Faktörlü:</strong> @(Model.TwoFactorEnabled ? "Aktif" : "Pasif")
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
