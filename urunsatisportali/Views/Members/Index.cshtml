@model IEnumerable<urunsatisportali.Models.ApplicationUser>
@{
    ViewData["Title"] = "Üyeler";
    Layout = "_AdminLayout";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <h2><i class="bi bi-people"></i> Üyeler</h2>
</div>

<div class="card mt-3">
    <div class="card-body">
        <div class="mb-3">
            <input type="text" id="memberSearch" class="form-control"
                placeholder="Üye adı veya kullanıcı adı ile ara...">
        </div>
        <div class="table-responsive">
            <table class="table table-hover" id="membersTable">
                <thead>
                    <tr>
                        <th>Ad Soyad</th>
                        <th>Kullanıcı Adı</th>
                        <th>Email</th>
                        <th>Telefon</th>
                        <th>Kayıt Tarihi</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.FullName</td>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td>@user.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info text-white">
                                        <i class="bi bi-eye"></i> Detay
                                    </a>
                                    @if (User.IsInRole("Owner"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">
                                            <i class="bi bi-pencil"></i> Düzenle
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('memberSearch').addEventListener('keyup', function () {
            const searchTerm = this.value.toLowerCase();
            const tableRows = document.querySelectorAll('#membersTable tbody tr');

            tableRows.forEach(row => {
                const fullName = row.cells[0].textContent.toLowerCase();
                const userName = row.cells[1].textContent.toLowerCase();

                if (fullName.includes(searchTerm) || userName.includes(searchTerm)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    </script>
}
