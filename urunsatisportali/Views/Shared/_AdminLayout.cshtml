@{ var nonce = Context.Items["CSPNonce"] as string ?? ""; }
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <style nonce="@nonce">
        html, body { font-family: Arial, Helvetica, sans-serif !important; }
        .btn, .form-control, .nav-link, .table, .card, h1, h2, h3, h4, h5, h6, p, label, span, a { font-family: Arial, Helvetica, sans-serif !important; }
    </style>
</head>
<body>
    <header class="border-bottom bg-white">
        <div class="container-fluid py-2 d-flex justify-content-between align-items-center">
            <div class="fw-semibold">@ViewData["Title"]</div>
            <div class="d-flex align-items-center gap-2">
                <span class="text-muted">@Context.Request.Cookies["Username"]</span>
                <form method="post" action="@Url.Action("Logout", "Auth")" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-danger btn-sm">Çıkış</button>
                </form>
            </div>
        </div>
    </header>

    <div class="container-fluid">
        <div class="row" style="min-height: calc(100vh - 56px);">
            <div class="col-auto p-0">
                @Html.Partial("_AdminSidebar")
            </div>
            <div class="col">
                <main class="p-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <script nonce="@nonce" src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script nonce="@nonce" src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

