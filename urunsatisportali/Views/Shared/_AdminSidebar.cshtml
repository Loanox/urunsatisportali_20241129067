@{
    var routeData = ViewContext.RouteData;
    var currentController = routeData.Values["controller"]?.ToString() ?? "";
    var currentAction = routeData.Values["action"]?.ToString() ?? "";
    Func<string, string, string> isActive = (ctrl, act) =>
        string.Equals(currentController, ctrl, StringComparison.OrdinalIgnoreCase) &&
        (string.IsNullOrEmpty(act) || string.Equals(currentAction, act, StringComparison.OrdinalIgnoreCase))
            ? "active" : string.Empty;
}

<div class="d-flex flex-column p-3 bg-light border-end h-100" style="min-width: 260px;">
    <a class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-decoration-none" href="@Url.Action("Dashboard", "Admin")">
        <span class="fs-5 fw-semibold">Yönetim Paneli</span>
    </a>
    <hr />
    <nav class="nav nav-pills flex-column gap-1">
        <a class="nav-link @isActive("Admin", "Dashboard")" href="@Url.Action("Dashboard", "Admin")">Dashboard</a>
        <a class="nav-link @isActive("Admin", "Products")" href="@Url.Action("Products", "Admin")">Ürünler</a>
        <a class="nav-link @isActive("Admin", "Categories")" href="@Url.Action("Categories", "Admin")">Kategoriler</a>
        <a class="nav-link @isActive("Admin", "Customers")" href="@Url.Action("Customers", "Admin")">Müşteriler</a>
        <a class="nav-link @isActive("Admin", "Sales")" href="@Url.Action("Sales", "Admin")">Satışlar</a>
        <form class="mt-3" method="post" action="@Url.Action("Logout", "Auth")">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger w-100">Logout</button>
        </form>
    </nav>
</div>
