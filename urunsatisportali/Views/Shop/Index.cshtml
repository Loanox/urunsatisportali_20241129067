@using urunsatisportali.Helpers
@model IEnumerable<urunsatisportali.Models.Product>
@{
    ViewData["Title"] = "Mağaza";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentCategoryId = ViewBag.CurrentCategoryId as int?;
    var currentMinPrice = ViewBag.CurrentMinPrice as decimal?;
    var currentMaxPrice = ViewBag.CurrentMaxPrice as decimal?;
    var currentSearchString = ViewBag.CurrentSearchString as string;
}

<!-- Breadcrumb -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Ürünler</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Ana Sayfa</a></li>
                    <li class="breadcrumb-item active">Mağaza</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<form method="get" asp-action="Index">
    @if (currentCategoryId.HasValue)
    {
        <input type="hidden" name="categoryId" value="@currentCategoryId" />
    }

    <div class="row">
        <div class="col-xl-3 col-lg-4">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex mb-3">
                        <div class="flex-grow-1">
                            <h5 class="fs-16">Filtreler</h5>
                        </div>
                        <div class="flex-shrink-0">
                            <a href="@Url.Action("Index", "Shop")" class="text-decoration-underline">Temizle</a>
                        </div>
                    </div>
                </div>

                <div class="accordion accordion-flush filter-accordion">

                    <div class="card-body border-bottom">
                        <div>
                            <p class="text-muted text-uppercase fs-12 fw-medium mb-2">Kategoriler</p>
                            <ul class="list-unstyled mb-0 filter-list">
                                <li>
                                    <a href="@Url.Action("Index", "Shop")"
                                        class="d-flex py-1 align-items-center @(currentCategoryId == null ? "text-primary fw-bold" : "")">
                                        <div class="flex-grow-1">
                                            <h5 class="fs-13 mb-0 listname">Tüm Ürünler</h5>
                                        </div>
                                    </a>
                                </li>
                                @if (ViewBag.Categories != null)
                                {
                                    foreach (var cat in (IEnumerable<urunsatisportali.Models.Category>)ViewBag.Categories)
                                    {
                                        <li>
                                            <a href="@Url.Action("Index", "Shop", new { categoryId = cat.Id, searchString = currentSearchString, minPrice = currentMinPrice, maxPrice = currentMaxPrice })"
                                                class="d-flex py-1 align-items-center @(currentCategoryId == cat.Id ? "text-primary fw-bold" : "")">
                                                <div class="flex-grow-1">
                                                    <h5 class="fs-13 mb-0 listname">@cat.Name</h5>
                                                </div>
                                            </a>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>

                    <div class="card-body border-bottom">
                        <p class="text-muted text-uppercase fs-12 fw-medium mb-4">Fiyat Aralığı</p>

                        <!-- Removed complex JS slider, using simple inputs for reliability -->
                        <div class="d-flex gap-2 align-items-center mt-3">
                            <input class="form-control form-control-sm" type="number" name="minPrice" placeholder="Min"
                                value="@currentMinPrice" />
                            <span class="fw-semibold text-muted">-</span>
                            <input class="form-control form-control-sm" type="number" name="maxPrice" placeholder="Max"
                                value="@currentMaxPrice" />
                        </div>
                        <div class="mt-3">
                            <button type="submit" class="btn btn-primary w-100">Uygula</button>
                        </div>
                    </div>

                </div>
            </div>
            <!-- end card -->
        </div>
        <!-- end col -->

        <div class="col-xl-9 col-lg-8">
            <div>
                <div class="card">
                    <div class="card-header border-0">
                        <div class="row g-4">
                            <div class="col-sm-auto">
                                <!-- Refresh Button Removed -->
                            </div>
                            <div class="col-sm">
                                <div class="d-flex justify-content-sm-end">
                                    <div class="search-box ms-2">
                                        <input type="text" name="searchString" class="form-control"
                                            placeholder="Ürün Ara..." value="@currentSearchString">
                                        <i class="ri-search-line search-icon"></i>
                                    </div>
                                    <button type="submit" class="btn btn-primary ms-2"><i
                                            class="ri-search-line"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col">
                                <ul class="nav nav-tabs-custom card-header-tabs border-bottom-0" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active fw-semibold" href="#">Ürünler <span
                                                class="badge bg-danger-subtle text-danger align-middle rounded-pill ms-1">@Model.Count()</span></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- end card header -->
                    <div class="card-body">
                        <div class="tab-content text-muted">
                            <div class="tab-pane active" id="productnav-all" role="tabpanel">

                                <div id="table-product-list-all" class="gridjs-border-none">
                                    <div class="row g-4">
                                        @foreach (var item in Model)
                                        {
                                            <div class="col-sm-6 col-xl-4">
                                                <div class="card explore-box card-animate">
                                                    <div class="explore-place-bid-img">
                                                        @{
                                                            var firstImg = item.Images?.FirstOrDefault()?.ImageUrl;
                                                            var displayImg = !string.IsNullOrEmpty(firstImg) ? firstImg :
                                                            "assets/images/products/img-" + (new Random().Next(1, 6)) + ".png";

                                                            if (!displayImg.StartsWith("assets") && !displayImg.StartsWith("/"))
                                                                displayImg = "/" + displayImg;
                                                                // simple fix for relative paths if needed, assuming /assets...
                                                        }
                                                        <img src="@Url.Content("~/" + displayImg.TrimStart('/'))" alt=""
                                                            class="card-img-top explore-img"
                                                            style="height: 200px; object-fit: cover;">
                                                        <div class="bg-overlay"></div>
                                                        <div class="place-bid-btn">
                                                            <a href="@Url.Action("Details", "Shop", new { id = item.Id })"
                                                                class="btn btn-primary"><i
                                                                    class="ri-eye-line align-bottom me-1"></i> Detay</a>
                                                        </div>
                                                    </div>
                                                    <div class="card-body">
                                                        @if (item.StockQuantity > 0)
                                                        {
                                                            <p class="fw-medium mb-0 float-end text-success"><i
                                                                    class="mdi mdi-check-decagram text-success align-middle"></i>
                                                                Stokta</p>
                                                        }
                                                        else
                                                        {
                                                            <p class="fw-medium mb-0 float-end text-danger"><i
                                                                    class="mdi mdi-close-circle text-danger align-middle"></i>
                                                                Tükendi</p>
                                                        }
                                                        <h5 class="mb-1"><a
                                                                href="@Url.Action("Details", "Shop", new { id = item.Id })">@item.Name</a>
                                                        </h5>
                                                        <p class="text-muted mb-0">@item.Brand</p>
                                                    </div>
                                                    <div class="card-footer border-top border-top-dashed">
                                                        <div class="d-flex align-items-center">
                                                            <div class="flex-grow-1">
                                                                <h5 class="text-primary mb-0">
                                                                    @CurrencyHelper.FormatTurkishLira(item.Price)
                                                                </h5>
                                                            </div>
                                                            <div class="flex-shrink-0">
                                                                <button type="submit" formmethod="post"
                                                                    formaction="@Url.Action("AddToCart", "Cart", new { productId = item.Id })"
                                                                    class="btn btn-light btn-sm" @(item.StockQuantity <= 0 ?
                                                                "disabled" : "")><i
                                                                        class="ri-shopping-cart-2-line align-bottom me-1"></i>
                                                                    Ekle</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        @if (!Model.Any())
                                        {
                                            <div class="col-12 text-center py-5">
                                                <h5>Ürün bulunamadı.</h5>
                                            </div>
                                        }
                                    </div>
                                </div>

                            </div>
                        </div>
                        <!-- end tab content -->
                    </div>
                    <!-- end card body -->
                </div>
                <!-- end card -->
            </div>
        </div>
        <!-- end col -->
    </div>
</form>
<!-- end row -->

@section Scripts {
    <!-- Script references removed to prevent conflict with server-side rendering -->
}
