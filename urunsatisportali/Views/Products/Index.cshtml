@using urunsatisportali.Helpers
@model IEnumerable<urunsatisportali.Models.Product>
@{
    ViewData["Title"] = "Ürünler";
    Layout = "_AdminLayout";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <h2><i class="bi bi-box-seam"></i> Ürünler</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni Ürün
    </a>
</div>

<div class="card mb-3">
    <div class="card-body">
        <form asp-action="Index" method="get">
            <div class="row g-3">
                <div class="col-md-4">
                    <input type="text" name="searchString" class="form-control"
                        placeholder="Ürün adı, SKU veya marka ara..."
                        value="@ViewContext.HttpContext.Request.Query["searchString"]" />
                </div>
                <div class="col-md-3">
                    <select name="categoryId" class="form-select" asp-items="ViewBag.CategoriesSelectList">
                        <option value="">Tüm Kategoriler</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100"><i class="bi bi-search"></i> Ara</button>
                </div>
                <div class="col-md-2">
                    <a asp-action="Index" class="btn btn-outline-secondary w-100"><i class="bi bi-x-circle"></i>
                        Temizle</a>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Ad</th>
                        <th>Fiyat</th>
                        <th>Stok</th>
                        <th>Kategori</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                            <tr>
                                <td>@p.Name</td>
                                <td>@CurrencyHelper.FormatTurkishLira(p.Price)</td>
                                <td>
                                    <span class="badge @(p.StockQuantity < 10 ? "bg-warning" : "bg-success")">
                                    @p.StockQuantity @p.Unit
                                    </span>
                                </td>
                                <td>@(p.Category?.Name ?? "Kategori yok")</td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-sm btn-info text-white"
                                            title="Detay">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-primary"
                                            title="Düzenle">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal"
                                            data-bs-target="#deleteModal" data-id="@p.Id" data-name="@p.Name" title="Sil">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

